# =============================================================================
# Bootstrap Configuration - Copy to terraform.tfvars and fill in values
# =============================================================================
# IMPORTANT: Never commit terraform.tfvars to git!

# Your GitHub username (where the repo is hosted)
github_org = "CodeUltimate"

# Repository name
github_repo = "lumera-beauty-academy"

# Your email for billing alerts
alert_email = "your-email@example.com"

# Monthly budget limit in USD (alerts at 50%, 80%, 100%)
monthly_budget_limit = 100

# AWS Region
aws_region = "eu-west-1"

# Environment
environment = "staging"

# Project name (used for resource naming)
project_name = "lumera"
