{
  "name": "lumera-beauty-academy",
  "version": "1.0.0",
  "private": true,
  "description": "LumÃ©ra Beauty Academy - Premium Global Beauty Education Platform",
  "scripts": {
    "frontend:dev": "npm run dev --workspace=services/frontend",
    "frontend:build": "npm run build --workspace=services/frontend",
    "frontend:start": "npm run start --workspace=services/frontend",
    "backend:build": "cd services/backend && ./mvnw clean package -DskipTests",
    "backend:run": "cd services/backend && ./mvnw spring-boot:run",
    "backend:test": "cd services/backend && ./mvnw test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd services/backend && ./mvnw flyway:migrate",
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:run\"",
    "build": "npm run frontend:build && npm run backend:build"
  },
  "workspaces": [
    "services/frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
